---
import { Github, Package } from "lucide-react";
---

<footer class="py-8 border-t border-border">
    <div class="section-container">
        <div
            class="flex flex-col sm:flex-row items-center justify-between gap-4"
        >
            <div class="flex items-center gap-2">
                <div
                    class="w-5 h-5 bg-foreground rounded-sm flex items-center justify-center"
                >
                    <span
                        class="text-background font-mono text-[10px] font-bold"
                        >ie</span
                    >
                </div>
                <span class="text-sm text-muted-foreground">
                    init-expo-app
                </span>
            </div>

            <div class="flex items-center gap-4">
                <a
                    href="https://github.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-muted-foreground hover:text-foreground transition-colors"
                    aria-label="GitHub"
                >
                    <Github className="w-4 h-4" />
                </a>
                <a
                    href="https://npmjs.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-muted-foreground hover:text-foreground transition-colors"
                    aria-label="NPM"
                >
                    <Package className="w-4 h-4" />
                </a>
            </div>

            <p class="text-xs text-muted-foreground">Built with Astro</p>
        </div>
    </div>
</footer>
