---
import { Github, GitPullRequest, Heart } from "lucide-react";

const contributionSteps = [
    "Fork the repository",
    "Create a feature branch",
    "Make your changes",
    "Submit a pull request",
];
---

<section class="py-20 lg:py-28">
    <div class="section-container">
        <div class="max-w-2xl mx-auto text-center">
            <div
                class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-secondary mb-6"
            >
                <Heart className="w-5 h-5" />
            </div>

            <h2 class="text-2xl sm:text-3xl font-bold mb-3">
                Open source, always
            </h2>
            <p class="text-muted-foreground mb-8">
                Init Expo App is MIT licensed. Contributions are welcome and
                appreciated.
            </p>

            <div class="flex flex-wrap justify-center gap-3 mb-10">
                <a
                    href="https://github.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-md text-sm font-medium hover:opacity-90 transition-opacity"
                >
                    <Github className="w-4 h-4" />
                    Star on GitHub
                </a>
                <a
                    href="https://github.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-md text-sm font-medium hover:bg-secondary transition-colors"
                >
                    <GitPullRequest className="w-4 h-4" />
                    Contribute
                </a>
            </div>

            <div class="p-6 rounded-lg border border-border bg-card text-left">
                <h3 class="font-semibold mb-4 text-sm">How to contribute</h3>
                <ol class="space-y-2">
                    {
                        contributionSteps.map((step, index) => (
                            <li class="text-sm text-muted-foreground flex items-center gap-3">
                                <span class="w-5 h-5 rounded-full bg-secondary flex items-center justify-center text-xs font-medium shrink-0">
                                    {index + 1}
                                </span>
                                {step}
                            </li>
                        ))
                    }
                </ol>
                <p
                    class="text-xs text-muted-foreground mt-4 pt-4 border-t border-border"
                >
                    We follow{" "}
                    <a
                        href="https://conventionalcommits.org"
                        class="text-accent hover:underline"
                    >
                        Conventional Commits
                    </a>{" "}
                    for all contributions.
                </p>
            </div>
        </div>
    </div>
</section>
